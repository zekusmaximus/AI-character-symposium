{
  "name": "ai-character-council",
  "version": "1.0.0",
  "description": "AI Character Council - A tool for speculative fiction authors to manage complex characters",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron dist/main/main.js",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "webpack serve --mode development",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "webpack --mode production",
    "build:electron": "tsc -p src/main/tsconfig.electron.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "keywords": [
    "ai",
    "character",
    "fiction",
    "writing",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "prisma": "^6.8.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2"
  }
}
